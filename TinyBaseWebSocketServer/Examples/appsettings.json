{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WebSocket": {
    "Port": 5000,
    "BufferSize": 4096,
    "MaxMessageSize": 65536,
    "EnableAutoCleanup": true,
    "OperationTimeoutSeconds": 30,
    "MaxConnectionsPerPath": 100,
    "WebSocketPath": "/ws"
  }
}